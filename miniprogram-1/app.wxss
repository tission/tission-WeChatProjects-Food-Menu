/* 设置全局样式 */
page {
  padding: 20px;
}

.container {
  margin: 20px;
}

button {
  padding: 10px;
  background-color: #ff8c00;
  color: white;
  border-radius: 5px;
  border: none;
}

input {
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-bottom: 10px;
}

/* 设置页面背景颜色 */
window {
  background-color: #f4f4f4;
}