/* 基本样式 */
.container {
  margin: 0;
  padding: 0;
  width: 93%; /* 宽度为 50% */

  padding: 0rpx; /* 设置容器内边距 */
  height: 100vh; /* 页面高度为100vh，保证内容显示完整 */
  overflow-y: auto; /* 设置为可滚动 */
}

.form-section {
  margin-bottom: 20rpx; /* 表单区块底部间距 */
}

.form-item {
  margin-bottom: 2rpx; /* 表单项底部间距 */
}

.form-item text {
  font-size: 30rpx; /* 表单项标题字体大小 */
  display: block;
  margin-bottom: 2rpx; /* 表单项标题下方间距 */
}

.input {
  width: 99%; /* 输入框宽度 */
  padding: 0rpx; /* 输入框内边距 */
  border: 1px solid #ccc; /* 输入框边框 */
  border-radius: 5rpx; /* 输入框圆角 */
  font-size: 28rpx; /* 输入框字体大小 */
  text-align: center; /* 内容居中 */
}

.picker {
  padding: 10rpx; /* 下拉选择框内边距 */
  border: 1px solid #ccc; /* 下拉选择框边框 */
  border-radius: 5rpx; /* 下拉选择框圆角 */
  font-size: 25rpx; /* 下拉选择框字体大小 */
  color: #333; /* 字体颜色 */
  text-align: center; /* 内容居中 */
}

.image {
  width: 100%; /* 图片宽度 */
  height: 300rpx; /* 图片高度 */
  margin-top: 0rpx; /* 图片顶部间距 */
}

.choose-image-btn {
  margin-top: 0rpx; /* 按钮顶部间距 */
  padding: 0rpx 20rpx; /* 按钮内边距 */
  background-color: #007aff; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border-radius: 5rpx; /* 按钮圆角 */
  font-size: 28rpx; /* 按钮字体大小 */
  text-align: center; /* 按钮文本居中 */
}

.category-edit-btn {
  margin-top: 0; /* 清除顶部的外边距 */
  padding: 10rpx 20rpx; /* 按钮内边距 */
  background-color: #007aff; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border-radius: 5rpx; /* 按钮圆角 */
  font-size: 30rpx; /* 按钮字体大小 */
}

.add-ingredient-btn {
  padding: 0rpx; /* 按钮内边距 */
  background-color: #a140c7; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  border-radius: 10rpx; /* 按钮圆角 */
  font-size: 28rpx; /* 按钮字体大小 */
  margin-top: 0rpx; /* 按钮顶部间距 */
}

.ingredient, .step {
  display: flex; /* 使用flex布局 */
  justify-content: center; /* 水平居中 */
  margin-top: 10rpx; /* 每行间距 */
  align-items: center; /* 垂直居中 */

}

.ingredient input, .step input {
  flex: 1; /* 输入框宽度自适应 */
  margin-right: 10rpx; /* 右边间距 */
}

.ingredient input:last-child, .step input:last-child {
  margin-right: 0; /* 去除最后一个输入框的右边间距 */
}

.delete-ingredient-btn {
  background-color: #f44336; /* 删除按钮背景颜色 */
  color: white; /* 删除按钮文字颜色 */
  border-radius: 10rpx; /* 删除按钮圆角 */
  font-size: 25rpx; /* 删除按钮字体大小 */
  padding: 0rpx 10rpx; /* 删除按钮内边距 */
  margin-top: -2px; /* 向上移动 5px */
}

.action-buttons {
  display: flex; /* 使用flex布局 */
  justify-content: space-between; /* 按钮左右对齐 */
  margin-top: 30rpx; /* 底部按钮区间距 */
}

.cancel-btn, .submit-btn {
  padding: 0rpx 30rpx; /* 按钮内边距 */
  font-size: 32rpx; /* 按钮字体大小 */
  border-radius: 5rpx; /* 按钮圆角 */
}

.cancel-btn {
  background-color: #f44336; /* 取消按钮背景颜色 */
  color: white; /* 取消按钮文字颜色 */
}

.submit-btn {
  background-color: #007aff; /* 提交按钮背景颜色 */
  color: white; /* 提交按钮文字颜色 */
}